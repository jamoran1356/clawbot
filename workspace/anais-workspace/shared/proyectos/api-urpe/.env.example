# === SERVIDOR ===
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
LOG_LEVEL=debug

# === DATABASE ===
DATABASE_URL=postgresql://api_user:change-me@localhost:5432/api_urpe
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# === REDIS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === JWT ===
JWT_SECRET=your-secret-key-min-32-chars-change-in-prod
JWT_EXPIRATION=900
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-prod
JWT_REFRESH_EXPIRATION=604800

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# === EMAIL / SMTP ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME="API Platform"

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# === PROXY ===
PROXY_TIMEOUT_MS=30000
PROXY_RETRIES=1

# === N8N (Opcional) ===
N8N_WEBHOOK_URL=
N8N_API_URL=
N8N_API_KEY=

# === SUPABASE (Opcional) ===
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
