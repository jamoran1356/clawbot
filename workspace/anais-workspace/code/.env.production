# === SERVIDOR ===
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1
LOG_LEVEL=info

# === DATABASE ===
DATABASE_URL=postgresql://user:password@db:5432/api_urpe
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# === REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# === JWT ===
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_EXPIRATION=900  # 15 minutos
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32
JWT_REFRESH_EXPIRATION=604800  # 7 días

# === CORS ===
CORS_ORIGINS=https://urpeailab.com,https://app.urpeailab.com,https://admin.urpeailab.com
CORS_CREDENTIALS=true

# === EMAIL / SMTP ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@urpeailab.com
SMTP_FROM_NAME="URPE API"

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=60000  # 1 minuto
RATE_LIMIT_MAX_REQUESTS=100

# === PROXY ===
PROXY_TIMEOUT_MS=30000  # 30 segundos
PROXY_RETRIES=1

# === N8N (si está integrado) ===
N8N_WEBHOOK_URL=https://n8n.example.com/webhook/api
N8N_API_URL=https://n8n.example.com/api
N8N_API_KEY=your-n8n-api-key

# === SUPABASE (si está integrado) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# === SEGURIDAD ===
ARGON2_MEMORY=19  # 64MB
ARGON2_TIME=2
ARGON2_PARALLELISM=1

# === MONITOREO (opcional) ===
SENTRY_DSN=
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com

# === LOGGING ===
LOG_FORMAT=json  # json o simple
LOG_TO_FILE=true
LOG_DIR=/var/log/api-urpe

# === ADMIN ===
ADMIN_EMAIL=admin@urpeailab.com
INITIAL_ADMIN_PASSWORD=change-me-in-production
